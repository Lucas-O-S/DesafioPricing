<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Product_Rule</fullName>
    <active>true</active>
    <description>Account cant be null</description>
    <errorConditionFormula>OR(
    AND(ISBLANK(ProductHierarchy__c), NOT(ISBLANK(Product__c))),
    AND(NOT(ISBLANK(ProductHierarchy__c)), ISBLANK(Product__c)),
    AND(ISBLANK(ProductHierarchy__c),ISBLANK(Product__c))
)</errorConditionFormula>
    <errorMessage>You need a product to have a hierarchy or a hierarchy to have a product and only one can be select at time</errorMessage>
</ValidationRule>
