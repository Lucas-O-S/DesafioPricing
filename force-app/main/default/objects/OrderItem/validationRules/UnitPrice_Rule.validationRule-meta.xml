<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>UnitPrice_Rule</fullName>
    <active>true</active>
    <description>Rule that make unit price be above 0</description>
    <errorConditionFormula>UnitPrice &lt;= 0</errorConditionFormula>
    <errorDisplayField>UnitPrice</errorDisplayField>
    <errorMessage>Unit Price must be above zero</errorMessage>
</ValidationRule>
